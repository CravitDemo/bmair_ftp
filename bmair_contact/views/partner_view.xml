<?xml version="1.0" encoding="utf-8" ?>
<odoo>
    <record model="ir.ui.view" id="res_partner_type_form_view">
        <field name="name">
            res.partner.type.form (in partner_type)
        </field>
        <field name="model">res.partner.type</field>
        <field name="arch" type="xml">
            <form string="Customer Types">
                <group col="4">
                    <field name="name" />
                    <field name="active" />
                </group>
            </form>
        </field>
    </record>
    <record model="ir.ui.view" id="res_partner_type_search_view">
        <field name="name">
            res.partner.type.search (in partner_type)
        </field>
        <field name="model">res.partner.type</field>
        <field name="arch" type="xml">
            <search>
                <field name="name" />
            </search>
        </field>
    </record>
    <record model="ir.ui.view" id="bmair_res_partner_type_tree_view">
        <field name="name">
            res.partner.type.tree (in partner_type)
        </field>
        <field name="model">res.partner.type</field>
        <field name="arch" type="xml">
            <tree editable="top">
                <field name="name" />
            </tree>
        </field>
    </record>
    <record model="ir.actions.act_window" id="bmair_res_partner_type_act_window">
        <field name="name">Customer Types</field>
        <field name="res_model">res.partner.type</field>
        <field name="view_mode">tree</field>
        <field name="domain">[]</field>
        <field name="context">{}</field>
    </record>
    <menuitem
        action="bmair_res_partner_type_act_window"
        id="bmair_menu_partner_type"
        name="Customer Types"
        parent="contacts.res_partner_menu_config"
    />
    <!-- customer brand -->
    <record model="ir.ui.view" id="res_partner_brand_form_view">
        <field name="name">
            res.partner.brand.form
        </field>
        <field name="model">res.partner.brand</field>
        <field name="arch" type="xml">
            <form string="Customer Brand">
            	<group>
	                <group>
	                    <field name="name" />
	                    
	                </group>
                	<field name="partner_ids" />
                </group>
            </form>
        </field>
    </record>
    <record model="ir.ui.view" id="res_partner_brand_search_view">
        <field name="name">
            res.partner.brand.search
        </field>
        <field name="model">res.partner.brand</field>
        <field name="arch" type="xml">
            <search>
                <field name="name" />
            </search>
        </field>
    </record>
    <record model="ir.ui.view" id="res_partner_type_tree_view">
        <field name="name">
            res.partner.brand.tree
        </field>
        <field name="model">res.partner.brand</field>
        <field name="arch" type="xml">
            <tree editable="top">
                <field name="name" />
            </tree>
        </field>
    </record>
    <record model="ir.actions.act_window" id="res_partner_brand_act_window">
        <field name="name">Customer Brand</field>
        <field name="res_model">res.partner.brand</field>
        <field name="view_mode">tree</field>
        <field name="domain">[]</field>
        <field name="context">{}</field>
    </record>
    <menuitem
        action="res_partner_brand_act_window"
        id="menu_partner_brand"
        name="Customer Brands"
        parent="contacts.res_partner_menu_config"
    />
    <record id="base.view_partner_category_list" model="ir.ui.view">
            <field name="name">Contact Tags</field>
            <field name="model">res.partner.category</field>
            <field eval="6" name="priority"/>
            <field name="arch" type="xml">
                <tree string="Contact Tags" editable="top">
                    <field name="name" string="Name"/>
                </tree>
            </field>
        </record>
    
    <menuitem id="contacts.menu_partner_category_form"
        action="base.action_partner_category_form"
        name="Contact Types"
        sequence="1" parent="contacts.res_partner_menu_config"/>
    
    <record id="view_partner_form" model="ir.ui.view">
        <field name="name">res.partner.form</field>
        <field name="model">res.partner</field>
        <field name="inherit_id" ref="base.view_partner_form" />
        <field name="arch" type="xml">
        	<field name="industry_id" position="replace">
            </field>
        	<xpath expr="//field[@name='category_id']" position="attributes">
                    <attribute name="string">Contact Type</attribute>
                    <attribute name="placeholder">Contact Type...</attribute>
                    <attribute name="attrs">{'invisible': [('is_company', '=', False)]}</attribute>
                </xpath>
            <xpath expr="//field[@name='category_id']" position="after">
                    <field name="partner_type_id" options='{"no_open": True}' attrs="{'invisible': [('is_company', '=', False)]}"/>
                    <field name="industry_id" attrs="{'invisible': [('is_company', '=', False)]}" options="{'no_create': True}"/>
                    <field name="brand_ids" widget="many2many_tags" attrs="{'invisible': [('is_company', '=', False)]}" options="{'no_create_edit': True}" placeholder="Customer Brand..."/>
                </xpath>
            <field name="ref" position="after">
            	<field name="mamut_nr" />
            </field>
<!--             <xpath expr="//field[@name='vat']" position="attributes"> -->
<!--                <attribute name="attrs">{'required': [('is_company', '=', True)]}</attribute> -->
<!--            </xpath> -->
            <xpath expr="//kanban/field[@name='lang']" position="after">
                <field name="job_position_id"/>
            </xpath>
            <xpath expr="//div[@class='oe_kanban_details']/div[2]" position="after">
                <div t-if="record.job_position_id.raw_value"><field name="job_position_id"/></div>
            </xpath>
        </field>
    </record>
</odoo>
