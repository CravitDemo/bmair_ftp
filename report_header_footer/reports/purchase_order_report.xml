<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <template id="report_purchaseorder_add_productname" inherit_id="purchase.report_purchaseorder_document">
        <t t-set="address" position="replace">
            <t t-set="address">
                <div t-field="o.partner_id"
                t-options='{"widget": "contact", "fields": ["address", "name"], "no_marker": True, "phone_icons": True}'/>
                <p t-if="o.partner_id.vat"><t t-esc="o.company_id.country_id.vat_label or 'Tax ID'"/>: <span t-field="o.partner_id.vat"/></p>
            </t>
        </t>
        <xpath expr="//t[@t-set='information_block']" position="replace">
            <t t-set="information_block">
                <strong>Shipping address:</strong>
                <div t-if="o.dest_address_id">
                    <div t-field="o.dest_address_id"
                        t-options='{"widget": "contact", "fields": ["address", "name"], "no_marker": True, "phone_icons": True}' name="purchase_shipping_address"/>
                </div>
            </t>
        </xpath>
        <t t-else="" position="replace">
            <t t-else="">
                <t t-set="information_block">
                    <strong>Shipping address:</strong>
                    <div t-if="o.picking_type_id and o.picking_type_id.warehouse_id">
                        <span t-field="o.picking_type_id.warehouse_id.name"/>
                        <div t-field="o.picking_type_id.warehouse_id.partner_id" t-options='{"widget": "contact", "fields": ["address"], "no_marker": True, "phone_icons": True}'/>
                    </div>
                </t>
            </t>
        </t>
        <xpath expr="//table//th[2]" position="replace">
        	<th name="th_desc"><strong>Internal Description</strong></th>
        </xpath>
        <xpath expr="//table//td[2]" position="replace">
              <td>
                     [<span t-field="line.product_id.default_code"/>]
                     <span t-field="line.product_id.name"/>
                     
              </td>
        </xpath>
        
        <xpath expr="//div[@id='informations']" position="replace">
            <table>
                <tr style="color: #841313;">
                    <td style=""><strong>Purchase Representative:</strong></td>
                    <td style="padding-left: 65px;"><strong>Your Order Reference:</strong></td>
                    <td style="padding-left: 90px;width: 40%;"><strong>Order Date:</strong></td>
                </tr>
                <tr>
                    <td><p t-field="o.user_id" class="m-0"/></td>
                    <td style="padding-left: 65px;"><p t-field="o.partner_ref" class="m-0"/></td>
                    <td style="padding-left: 90px;"><p t-field="o.date_order" t-options="{&quot;widget&quot;: &quot;date&quot;}" class="m-0"/></td>
                </tr>
            </table>
            <br/>
        </xpath> 
        <xpath expr="//table[@class='table table-sm o_main_table']//td[5]" position="replace">
            <td class="text-right">
                <span t-field="line.price_unit" t-options='{"widget": "monetary", "display_currency": o.currency_id}'/>
            </td>
        </xpath>
        <xpath expr="//table[@class='table table-sm o_main_table']/thead" position="attributes">
            <attribute name="style">color: #841313;</attribute>
        </xpath>
        <xpath expr="//table[@class='table table-sm o_main_table']//td[3]" position="replace">
              	<td class="text-center">
                      <span t-field="line.date_planned" t-options="{&quot;widget&quot;: &quot;date&quot;}"/>
                </td>
        </xpath> 
        <xpath expr="//table[@class='table table-sm o_main_table']/tbody//td[4]" position="replace">
              	<td class="text-right">
                    <span t-field="line.product_qty"/>
                </td>
        </xpath>
        <xpath expr="//table[@class='table table-sm o_main_table']//th[@name='th_price_unit']" position="replace">
            <th name="th_price_unit" class="text-right"><strong>Gross Price</strong></th>
        </xpath>
        <xpath expr="//table[@class='table table-sm o_main_table']//th[@name='th_amount']" position="replace">
            <th name="th_amount" class="text-right"><strong>Net Amount</strong></th>
        </xpath>
    </template>
</odoo>