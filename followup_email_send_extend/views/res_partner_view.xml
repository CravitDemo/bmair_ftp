<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

        <record id="view_partner_form_inherit_account_email" model="ir.ui.view">
            <field name="name">res.partner.form.inherit.account_email</field>
            <field name="model">res.partner</field>
            <field name="inherit_id" ref="base.view_partner_form"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='website']" position="after">
                    <field name="statement_account_email" widget="email"/>
                </xpath>
            </field>
        </record>

    </data>
</odoo>
