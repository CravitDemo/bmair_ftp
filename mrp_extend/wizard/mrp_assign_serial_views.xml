<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_mrp_split_mo_assign_serial_numbers" model="ir.ui.view">
        <field name="name">mrp_splitmo_assign_serial_numbers</field>
        <field name="model">mrp.assign.serial</field>
        <field name="arch" type="xml">
            <form string="Assign Serial Numbers">
                <group col="2">
                    <field name="mo_id" invisible="1"/>
                    <field name="product_id" readonly="1"/>
                    <field name="prefix_char"/>
                    <field name="next_serial_count"/>
                </group>
                <footer>
                    <button name="generate_serial_numbers" type="object"
                            string="Assign Serial Numbers and Split MO" class="oe_highlight"/>
                    <button special="cancel" string="Cancel"/>
                </footer>
            </form>
        </field>
    </record>

    <record id="act_assign_serial_numbers_mo" model="ir.actions.act_window">
        <field name="name">MO Assign Serial Numbers</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">mrp.assign.serial</field>
        <field name="view_mode">form</field>
        <field name="context">{}</field>
        <field name="target">new</field>
    </record>
</odoo>
