<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <template id="template_followup_report" inherit_id="account_followup.template_followup_report">
        <xpath expr="//t[@t-if='invoice_address_id.email']" position="replace">
            <t t-if="followup_address_id and followup_address_id.email">
                <a t-att-href="'mailto:' + followup_address_id.email" title="Send an email">
                    <i class='fa fa-envelope' role="img" aria-label="Email"/><t t-esc="' ' + followup_address_id.email" />
                </a>
            </t>

            <t t-if="not followup_address_id and invoice_address_id and invoice_address_id.email">
                <a t-att-href="'mailto:' + invoice_address_id.email" title="Send an email">
                    <i class='fa fa-envelope' role="img" aria-label="Email"/><t t-esc="' ' + invoice_address_id.email" />
                </a>
            </t>

        </xpath>
    </template>

</odoo>

