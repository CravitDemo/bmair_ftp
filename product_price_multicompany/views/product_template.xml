<?xml version="1.0" encoding="utf-8"?>
<openerp>
    <data>
        <record id="product_template_form_multi_company_sales_price" model="ir.ui.view">
            <field name="name">product.template.form.multi.company.sales.price</field>
            <field name="model">product.template</field>
            <field name="inherit_id" ref="product.product_template_form_view"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='list_price']" position="replace">
                        <field name="list_price" class="oe_inline" widget="monetary" options="{'currency_field': 'cost_currency_id', 'field_digits': True}"/>
                </xpath>
            </field>
        </record>


        <record id="product_template_kanban_multi_company_sales_price" model="ir.ui.view">
            <field name="name">product.template.kanban.multi.company.sales.price</field>
            <field name="model">product.template</field>
            <field name="inherit_id" ref="product.product_template_kanban_view"/>
            <field name="arch" type="xml">

                <xpath expr="//field[@name='currency_id']" position="after">
                        <field name="cost_currency_id"/>
                </xpath>
                <xpath expr="//field[@name='lst_price']" position="replace">
                        <field name="lst_price" class="oe_inline" widget="monetary" options="{'currency_field': 'cost_currency_id', 'field_digits': True}"/>
                </xpath>
            </field>
        </record>

        <record id="product_product_kanban_multi_company_sales_price" model="ir.ui.view">
            <field name="name">product.product.kanban.multi.company.sales.price</field>
            <field name="model">product.product</field>
            <field name="inherit_id" ref="product.product_kanban_view"/>
            <field name="arch" type="xml">

                <xpath expr="//field[@name='lst_price']" position="after">
                        <field name="cost_currency_id"/>
                </xpath>
                <xpath expr="//field[@name='lst_price']" position="replace">
                        <field name="lst_price" class="oe_inline" widget="monetary" options="{'currency_field': 'cost_currency_id', 'field_digits': True}"/>
                </xpath>
            </field>
        </record>

    </data>
</openerp>